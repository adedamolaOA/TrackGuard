<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ade.leke.com.trackguard.MoreInformationActivity"
    android:background="#ffffff">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar">
    </include>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:id="@+id/bmn"
        android:layout_below="@+id/tool_bar"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="151dp"
            android:layout_height="97dp"
            android:id="@+id/imageView2"
            android:src="@drawable/wii_tech"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mobile Guard a trademark product of WII-Tech Nigeria and All rights are reserved."
            android:id="@+id/lblAboutUsTxt1"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="We at WII-Tech Nigeria provide world class quality services in enterprise solutions and security systems, WII-Tech is a collection of professional I.T consultants whose sole purpose is to make Organization I.T Services run smoothly. "
            android:id="@+id/lblAboutUsTxt2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Contact Us"
            android:id="@+id/textView11"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Email: wiitech.mobile.guard@gmail.com"
            android:id="@+id/textView29" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Main Phone Number: +2348122226955"
            android:id="@+id/textView30" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Alternative Phone Number: +2349095239649"
            android:id="@+id/textView31"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms and Condition"
            android:id="@+id/butTerms"
            android:background="@android:color/transparent"
            android:textStyle="bold"
            android:textColor="#161c72"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</RelativeLayout>
