<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="#262431">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contact_dia1"
        android:weightSum="1"
        android:background="#b72c2c"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="71dp"
            android:layout_height="69dp"
            android:id="@+id/imgMovementStatus1"
            android:src="@drawable/cds"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Nofication1"
            android:layout_marginBottom="5dp"
            android:background="#b72c2c">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:id="@+id/cv">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/lblPanicMovementDate"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#FFF" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="No Movement Data"
                android:id="@+id/lblPanicMovementAddress"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:textStyle="normal"
                android:textColor="#ffffff" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
